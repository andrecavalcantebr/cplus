{
    "version": "0.2.0",
    "configurations": [
        // Debug parser
        {
            "name": "Debug parser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/parser/parser",
            "args": [
                "../mini.cplus.h"
            ],
            "cwd": "${workspaceFolder}/parser",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "externalConsole": false,
            "preLaunchTask": "build parser (debug)",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "description": "Enable pretty printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
