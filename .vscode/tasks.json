{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build parser (debug)",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/parser"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "clean parser",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}/parser"
      }
    }
  ]
}
